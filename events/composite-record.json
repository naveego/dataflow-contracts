{
  "$id": "https://naveego.com/composite-record.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "CompositeRecord",
  "type": "object",
  "description": "A representation of a composite record provided by some microservice.",
  "allOf": [
    {
      "$ref": "payload.json"
    }
  ],
  "discriminator": "typ",
  "required": [
    "typ",
    "recordId",
    "shapeId",
    "tenantId",
    "data",
    "owners",
    "versions"
  ],
  "properties": {
    "typ": {
      "type": "string",
      "title": "Type",
      "description": "The type, used to discriminate between payloads."
    },
    "recordId": {
      "type": "string",
      "title": "RecordId"
    },
    "shapeId": {
      "type": "string",
      "title": "ShapeId"
    },
    "tenantId": {
      "type": "string",
      "title": "TenantId"
    },
    "createdAt": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "title": "CreatedAt"
    },
    "modifiedAt": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "title": "ModifiedAt"
    },
    "data": {
      "type": "object",
      "title": "Data",
      "additionalProperties": {}
    },
    "owners": {
      "type": "object",
      "title": "Owners",
      "additionalProperties": {
        "type": "string"
      }
    },
    "versions": {
      "type": "array",
      "title": "Versions",
      "items": {
        "$ref": "dataflow-event-with-datapoint.json"
      }
    },
    "cpids": {
      "type": [
        "array",
        "null"
      ],
      "title": "ChangedPropertyIds",
      "items": {
        "type": "string"
      }
    },
    "values": {
      "type": [
        "array",
        "null"
      ],
      "title": "Values",
      "description": "The values of the properties as determined by the merge rules.",
      "items": {
        "$ref": "#/definitions/PropertyVersion"
      }
    }
  },
  "definitions": {
    "PropertyVersion": {
      "title": "PropertyVersion",
      "type": "object",
      "description": "A value of a property from a version.",
      "required": [
        "jid",
        "rid"
      ],
      "properties": {
        "jid": {
          "title": "JobID",
          "type": "string",
        },
        "rid": {
          "title": "RecordID",
          "type": "string",
        },
        "value": {
          "type": [
            "array",
            "boolean",
            "integer",
            "number",
            "object",
            "string",
            "null"
          ]
        }
      }
    },
  }
}