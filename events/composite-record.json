{
  "$id": "https://naveego.com/composite-record.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "CompositeRecord",
  "type": "object",
  "description": "A representation of a composite record provided by some microservice.",
  "allOf": [{ "$ref": "payload.json" }],
  "discriminator": "typ",
  "required": [
    "typ",
    "recordId",
    "mergeRuleId",
    "tenantId",
    "data",
    "owners",
    "versions"
  ],
  "properties": {
    "typ": {
      "type": "string",
      "title": "Type",
      "description": "The type, used to discriminate between payloads."
    },
    "recordId": {
      "type": "string",
      "title": "RecordId"
    },
    "mergeRuleId": {
      "type": "string",
      "title": "MergeRuleId"
    },
    "tenantId": {
      "type": "string",
      "title": "TenantId"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "title": "CreatedAt"
    },
    "modifiedAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "title": "ModifiedAt"
    },
    "data": {
      "type": "object",
      "title": "Data"
    },
    "owners": {
      "type": "object",
      "title": "Owners",
      "additionalProperties": { "type": "string" }
    },
    "versions": {
      "type": "array",
      "title": "Versions",
      "items": {
        "$ref": "dataflow-event-with-datapoint.json"
      }
    }
  }
}
