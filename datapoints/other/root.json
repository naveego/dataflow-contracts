{
  "$id": "https://example.com/schemas/root.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Root",
  "type": "object",
  "properties": {
    "value": {
      "type": "string"
    },
    "child": {
      "$ref": "#/definitions/ChildBase"
    }
  },
  "definitions": {
    "ChildBase": {
      "$ref": "./child-base.json"
    },
    "ChildDerivedA": {
      "allOf": [
        { "$ref": "./child-derived-a.json" },
        { "$ref": "./child-base.json" }
      ]
    },
    "ChildDerivedB": {
      "$ref": "./child-derived-b.json",
      "allOf": [{ "$ref": "./child-base.json" }]
    },
    "ChildDerivedC": {
      "$id": "https://example.com/schemas/child-derived-c.json",
      "title": "ChildDerivedC",
      "type": "object",
      "allOf": [{ "$ref": "./child-base.json" }],
      "properties": {
        "childDerivedCValue": {
          "type": "string"
        }
      }
    }
  }
}
